{% extends '::auth/base.html.twig' %}

{% block body %}

    <h2>
        {{ 'login.title'|trans }}
    </h2>

    <form method="post" action="{{ path('login_check') }}">

        {% if error|length %}
            <div class="alert alert-danger">{{ error|trans }}</div>
        {% endif %}

        <div class="form-group">
            <input name="_username" type="text" class="form-control input-lg" placeholder="{{ 'login.username'|trans }}">
        </div>

        <div class="form-group">
            <input name="_password" type="password" class="form-control input-lg" placeholder="{{ 'login.password'|trans }}">
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">
                {{ 'login.button'|trans }}
            </button>
        </div>

        <div class="links">
            <a href="{{ path('register') }}">{{ 'register.title'|trans }}</a>
        </div>
    </form>

{% endblock %}