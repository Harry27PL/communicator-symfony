<div class="form-group {{ class }} {% if error %}has-error{% endif %}">
    <label for="{{ name }}" class="{{ classLeft }} control-label">{{ label|raw }}</label>
    <div class="{{ classRight }}">
        <input type="number" class="form-control" id="{{ name }}" name="{{ name }}" value="{{ value }}" step="{{ step }}" pattern="{{ pattern }}">
        {% if error %}<p class="help-block">{{ error }}</p>{% endif %}
    </div>
</div>