<div class="chat-text-message {% if message.sender == user %}me{% else %}interlocutor{% endif %}">

    <div class="chat-text-message-avatar">
        {{ avatar(message.sender) }}
        <time>{{ message.sentAt|date('G:i') }}</time>
    </div>

    <div class="chat-text-message-container">

        <div class="chat-text-message-container-header">
            <span>{{ message.sender.username }}</span>
            <time>{{ message.sentAt|date('G:i') }}</time>
        </div>

        <div class="chat-text-message-container-content">
            {{ autop(message.content) }}
        </div>

    </div>

</div>